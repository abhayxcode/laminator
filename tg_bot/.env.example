# ============================================
# Telegram Bot Configuration (REQUIRED)
# ============================================
BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# Privy Configuration (REQUIRED)
# ============================================
# Get these from https://dashboard.privy.io
PRIVY_APP_ID=your_privy_app_id_here
PRIVY_APP_SECRET=your_privy_app_secret_here

# Authorization Key Configuration for Server-Owned Wallets
# Create these in Privy Dashboard under "Authorization Keys"
# Both PRIVY_KEY_QUORUM_ID and PRIVY_AUTHORIZATION_PRIVATE_KEY are required for server-owned wallets

# The Key Quorum ID (also called Authorization Key ID)
# This is the signer ID from Privy Dashboard
PRIVY_KEY_QUORUM_ID=your_key_quorum_id_here
# Backward compatibility (PRIVY_KEY_QUORUM_ID is preferred)
# PRIVY_AUTHORIZATION_KEY=your_key_quorum_id_here

# The Authorization Private Key (base64 PKCS8 format)
# Generate this using the setup script or Privy CLI
# This is used to sign transaction authorization requests
PRIVY_AUTHORIZATION_PRIVATE_KEY=your_base64_private_key_here

# ============================================
# Solana RPC Configuration (RECOMMENDED)
# ============================================
# Option 1: Use Helius (recommended for better rate limits)
HELIUS_API_KEY=your_helius_api_key_here

# Option 2: Use custom RPC endpoint
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Alternative RPC URL (used by some services)
RPC_URL=https://api.mainnet-beta.solana.com

# ============================================
# Database Configuration (OPTIONAL but RECOMMENDED)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/laminator

# ============================================
# API Server Configuration (OPTIONAL)
# ============================================
# Server wallet private key for API endpoints
PRIVATE_KEY=your_server_wallet_private_key_base58_here
# API server port
API_PORT=3000

# ============================================
# Protocol Configuration (OPTIONAL - defaults provided)
# ============================================
# USDC mint address (default: mainnet USDC)
USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Drift Program ID (has default)
# DRIFT_PROGRAM_ID=your_drift_program_id

# Flash Program ID (has default)
# FLASH_PROGRAM_ID=FLASH6Lo6h3iasJKWDs2F8TkW2UKf3s15C8PMGuVfgBn

# Jupiter Perps Program ID (has default)
# JUPITER_PERPS_PROGRAM_ID=PERPHjGBqRHArX4DySjwM6UJHiR3sWAatqfdBS2qQJu

# ============================================
